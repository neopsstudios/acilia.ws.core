{% extends('@WSCore/cms/layout.html.twig') %}

{% page_configuration {
    'title': 'profile.title'|trans({}, 'ws_cms_administrator'),
    'header': 'profile.title'|trans({}, 'ws_cms_administrator'),
    'breadcrumbs': [
        {
            'name': 'profile.title'|trans({}, 'ws_cms_administrator'),
            'main': true
        }
    ]
} %}

{% block content %}
    <div class="container">
        <div class="c-doc-article">
            <div class="c-doc-article__content-full">
                <h3 class="u-h3 u-mb-30">{{ 'profile.title'|trans({}, 'ws_cms_administrator') }}</h3>
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.password) }}
                {{ form_row(form.newPassword.first) }}
                {{ form_row(form.newPassword.second) }}
            </div>
        </div>
        <div class="c-divider u-mv-small"></div>
        <button type="submit" class="c-btn c-btn--info">{{ 'save'|trans({}, 'ws_cms') }}</button>
        <a href="{{ path('cms_dashboard') }}" class="c-btn c-btn--secondary">{{ 'cancel'|trans({}, 'ws_cms') }}</a>
        {{ form_widget(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>

{% endblock %}
