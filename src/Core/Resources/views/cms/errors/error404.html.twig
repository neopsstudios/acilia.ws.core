{% extends('@WSCore/cms/base.html.twig') %}

{% page_configuration {
    'title': '404',
} %}

{% set bodyClass = 'gray-bg' %}

{% block body %}
<div class="middle-box text-center animated fadeInDown">
    <h1>404</h1>
    <h3 class="font-bold">{{ 'error_page.404.title'|trans({}, 'ws_cms') }}</h3>

    <div class="error-desc">
        <p>{{ 'error_page.404.description'|trans({}, 'ws_cms') }}</p>
        <p>&nbsp;</p>
        <p><a href="{{ path('ws_dashboard') }}" role="button" class="btn btn-primary btn-lg">{{ 'error_page.go_back'|trans({}, 'ws_cms') }}</a></p>
    </div>
</div>
{% endblock %}
