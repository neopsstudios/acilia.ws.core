{% if batch_actions is not empty %}
    <div class="c-field c-field--inline c-choice-wrapper c-choice-wrapper--small u-mr-10 js-batchActions u-hidden">
        <select name="t" class="u-mr-10 js-batchAction" data-component="ws_select">
            <option value="">
                {{ 'actions'|trans({}, 'ws_cms') }}
            </option>
            {% for action in batch_actions %}
                {% set actionData = get_batch_action_data(action) %}

                <option value="{{ ws_cms_path("#{route_prefix}_#{actionData.route}") }}" data-title="{{ actionData.title|trans({}, 'ws_cms') }}">
                    {{ actionData.label|trans({}, 'ws_cms') }}
                </option>
            {% endfor %}
        </select>
    </div>
{% endif %}
