<header class="c-navbar u-mb-medium">
    <button class="c-sidebar-toggle u-mr-small">
        <span class="c-sidebar-toggle__bar"></span>
        <span class="c-sidebar-toggle__bar"></span>
        <span class="c-sidebar-toggle__bar"></span>
    </button>

    {% set breadcrumbs = [{ 'name': 'dashboard.menu'|trans({}, 'ws_cms'), 'path': path('ws_dashboard') }]|merge(get_breadcrumbs()) %}

    <ol class="u-mr-auto c-breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li class="c-breadcrumb__item {{ breadcrumb.main is defined and breadcrumb.main ? 'is-active' }}">
                {% if breadcrumb.path is defined %}
                    <a href="{{ breadcrumb.path }}">
                        {{ breadcrumb.name }}
                    </a>
                {% else %}
                    {{ breadcrumb.name }}
                {% endif %}
            </li>
        {% endfor %}
    </ol>

    {{ include('@WSCore/cms/general/language.html.twig') }}

    {{ include('@WSCore/cms/general/alerts.html.twig') }}

    <a class="c-navbar__logout u-mr-small" href="{{ app.user ? logout_path() : '' }}" title="{{ 'logout'|trans({}, 'ws_cms') }}">
        <i class="c-navbar__logout-icon fa fa-power-off" aria-hidden="true"></i>
    </a>

    {{ include('@WSCore/cms/general/dropdown_profile.html.twig') }}

</header>
