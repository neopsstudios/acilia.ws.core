{% extends('@WSCore/cms/base.html.twig') %}

{% set bodyClass = 'o-page--center' %}

{% block body %}
    <div class="o-page__card">
        <div class="c-card u-mb-xsmall">
            <header class="c-card__header">
{#                 <a class="c-card__icon" href="#!">
                    <img src="img/logo-login.svg" alt="Dashboard UI Kit">
                    <img src="{{ asset('cms/images/logo-header.png') }}"/>
                </a> #}
                <h1 class="u-h4 u-text-center u-mb-zero">{{ 'login.header'|trans({}, 'ws_cms') }}</h1>
            </header>

            <form class="c-card__body" action="{{ path('ws_cms_login') }}" method="post" role="form" accept-charset="UTF-8">
                <div class="c-field u-mb-small">
                    <label class="c-field__label" for="username">{{ 'login.email'|trans({}, 'ws_cms') }}</label> 
                    <input class="c-input" type="email" id="username" placeholder="{{ 'login.email'|trans({}, 'ws_cms') }}" name="_username" value="{{ last_username }}"> 
                </div>

                <div class="c-field u-mb-small">
                    <label class="c-field__label" for="password">{{ 'login.password'|trans({}, 'ws_cms') }}</label> 
                    <input class="c-input" type="password" id="password" placeholder="{{ 'login.password'|trans({}, 'ws_cms') }}" name="_password"> 
                </div>

                <button class="c-btn c-btn--info c-btn--fullwidth u-mb-small" type="submit">{{ 'login.button'|trans({}, 'ws_cms') }}</button>

                <input type="hidden" name="_target_path" value="{{ path('ws_dashboard') }}" />
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {% if error %}
                    <div class="c-alert c-alert--border-danger u-align-items-center u-mv-10"><i class="fal fa-exclamation-triangle u-pr-5"></i>{{ error.message }}</div>
                {% endif %}
                <p class="u-text-xsmall u-text-center"> WideStand &copy; Acilia Software {{ 'now'|date('Y') }}</p>
            </form>
        </div>

